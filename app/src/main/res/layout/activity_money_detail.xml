<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="600dp"
    tools:context=".ui.MoneyDetailActivity">


    <TextView
        android:id="@+id/textViewMoneyPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="91dp"
        android:fontFamily="sans-serif-condensed-light"
        android:text="122.656"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgMoneyIcon" />

    <ImageView
        android:id="@+id/imgMoneyIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="49dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/textViewMoneyType"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="91dp"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif-condensed-light"
        android:text="Bitcoin"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgMoneyIcon" />

    <TextView
        android:id="@+id/textViewMoneyDetail"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="49dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="49dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="TextView"
        android:textColor="#000000"
        android:lineSpacingExtra="4sp"
        android:textSize="15sp"
        android:textStyle="normal"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewMoneyType" />

</androidx.constraintlayout.widget.ConstraintLayout>

